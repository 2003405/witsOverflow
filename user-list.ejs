<!DOCTYPE html>
<html lang="en">
  <link rel="shortcut icon" href="/assets/favicon.ico" />
  <link rel="stylesheet" href="/assets/decode.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    * {
      font-family: sans-serif; /* Change your font family */
    }

    .content-table {
      border-collapse: collapse;
      margin: 25px 0;
      font-size: 0.9em;
      min-width: 500px;
      border-spacing: 100px;
      border-radius: 5px 5px 0 0;
      overflow: hidden;
      box-shadow: 0 0 20px #007bff;
      text-align: center;
    }

    .content-table thead tr {
      background-color: #007bff;
      color: #007bff;
      text-align: center;
      font-weight: bold;
    }

    .content-table th,
    .content-table td {
      padding: 12px 15px;
    }

    .content-table tbody tr {
      border-bottom: 1px solid #007bff;
    }

    .content-table tbody tr:nth-of-type(even) {
      background-color: #d3d3d3;
    }

    .content-table tbody tr:last-of-type {
      border-bottom: 2px solid #007bff;
    }

    .content-table tbody tr.active-row {
      font-weight: bold;
      color: #007bff;
    }
  </style>

  <head>
    <title>Questions</title>
  </head>
  <body>
    <div class="table-data">
      <h2 font-weight:bold>Wits Overflow</h2>
      <table class="content-table" border="1" frame="void" rules="rows">
        <tr>
          <th>No.</th>
          <th>Username</th>
          <th>Questions</th>
          <th>Top Answer</th>
        </tr>

        <% if(userData.length!=0){ var i=1; userData.forEach(function(data){ %>
        <tr>
          <td><%=i; %></td>
          <td><%=data.user %></td>
          <td><%=data.q_asked %></td>
          <td><%=data.q_answer %></td>
          <td>
            <a href="/users/edit/<%=data.id%>"
              >View All Answers To this Question
            </a>
          </td>
        </tr>
        <% i++; }) %> <% } else{ %>
        <tr>
          <td colspan="7">No Data Found</td>
        </tr>
        <% } %>
      </table>

      <button>Home</button>
    </div>
  </body>
</html>
